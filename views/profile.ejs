<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Perfil</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <!-- Loading spinner -->
          <div id="loading" class="text-center">
            <div class="spinner-border text-success" role="status">
              <span class="visually-hidden">Cargando...</span>
            </div>
            <p class="mt-2">Cargando perfil...</p>
          </div>

          <!-- Error alert -->
          <div id="error-alert" class="alert alert-danger d-none" role="alert">
            <strong>Error:</strong> <span id="error-message"></span>
          </div>

          <!-- Profile card (hidden initially) -->
          <div id="profile-card" class="card d-none">
            <div class="card-header bg-success text-white">
              <h4 class="mb-0">Mi Perfil</h4>
            </div>
            <div class="card-body">
              <!-- Avatar con inicial -->
              <div class="text-center mb-4">
                <div
                  id="avatar"
                  class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center"
                  style="
                    width: 100px;
                    height: 100px;
                    font-size: 48px;
                    font-weight: bold;
                  "
                ></div>
                <h3 id="user-name" class="mt-3"></h3>
              </div>

              <!-- Información Personal -->
              <div class="mb-4">
                <h5 class="border-bottom pb-2">Información Personal</h5>
                <div class="row mt-3">
                  <div class="col-md-6 mb-3">
                    <label class="text-muted small">Nombre</label>
                    <p id="name" class="mb-0"></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="text-muted small">Email</label>
                    <p id="email" class="mb-0"></p>
                  </div>
                  <div id="phone-container" class="col-md-6 mb-3 d-none">
                    <label class="text-muted small">Teléfono</label>
                    <p id="phone" class="mb-0"></p>
                  </div>
                </div>
              </div>

              <!-- Información Profesional -->
              <div id="professional-info" class="mb-4 d-none">
                <h5 class="border-bottom pb-2">Información Profesional</h5>
                <div class="row mt-3">
                  <div
                    id="specialization-container"
                    class="col-md-6 mb-3 d-none"
                  >
                    <label class="text-muted small">Especialización</label>
                    <p id="specialization" class="mb-0"></p>
                  </div>
                  <div id="gym-container" class="col-md-6 mb-3 d-none">
                    <label class="text-muted small">Gimnasio</label>
                    <p id="gym" class="mb-0"></p>
                  </div>
                  <div id="price-container" class="col-md-6 mb-3 d-none">
                    <label class="text-muted small">Precio por Sesión</label>
                    <p id="price" class="mb-0"></p>
                  </div>
                  <div
                    id="certifications-container"
                    class="col-md-6 mb-3 d-none"
                  >
                    <label class="text-muted small">Certificaciones</label>
                    <p id="certifications" class="mb-0"></p>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="text-muted small">Estado</label>
                    <p class="mb-0">
                      <span id="status-badge" class="badge"></span>
                    </p>
                  </div>
                </div>
              </div>

              <!-- Botones de Acción -->
              <div class="d-flex justify-content-between mt-4">
                <a href="/" class="btn btn-outline-secondary"
                  >Volver al Inicio</a
                >
                <a href="/logout" class="btn btn-danger">Cerrar Sesión</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Cargar perfil desde la API usando cookies
      async function loadProfile() {
        try {
          const response = await fetch("/auth/profile", {
            method: "GET",
            credentials: "include", // Importante: incluir cookies en la petición
          });

          if (!response.ok) {
            throw new Error("No se pudo cargar el perfil");
          }

          const data = await response.json();
          const user = data.user;

          // Ocultar loading y mostrar tarjeta
          document.getElementById("loading").classList.add("d-none");
          document.getElementById("profile-card").classList.remove("d-none");

          // Llenar datos básicos
          document.getElementById("avatar").textContent = user.name
            .charAt(0)
            .toUpperCase();
          document.getElementById("user-name").textContent = user.name;
          document.getElementById("name").textContent = user.name;
          document.getElementById("email").textContent = user.email;

          // Teléfono (condicional)
          if (user.phone_number) {
            document.getElementById("phone").textContent = user.phone_number;
            document
              .getElementById("phone-container")
              .classList.remove("d-none");
          }

          // Información profesional
          let hasProfessionalInfo = false;

          if (user.specialization) {
            document.getElementById("specialization").textContent =
              user.specialization;
            document
              .getElementById("specialization-container")
              .classList.remove("d-none");
            hasProfessionalInfo = true;
          }

          if (user.gym_name) {
            document.getElementById("gym").textContent = user.gym_name;
            document.getElementById("gym-container").classList.remove("d-none");
            hasProfessionalInfo = true;
          }

          if (user.session_price) {
            document.getElementById("price").textContent =
              "$" + user.session_price;
            document
              .getElementById("price-container")
              .classList.remove("d-none");
            hasProfessionalInfo = true;
          }

          if (user.certifications) {
            document.getElementById("certifications").textContent =
              user.certifications;
            document
              .getElementById("certifications-container")
              .classList.remove("d-none");
            hasProfessionalInfo = true;
          }

          // Estado de disponibilidad
          const statusBadge = document.getElementById("status-badge");
          if (user.available) {
            statusBadge.textContent = "Disponible";
            statusBadge.classList.add("bg-success");
          } else {
            statusBadge.textContent = "No Disponible";
            statusBadge.classList.add("bg-secondary");
          }

          // Mostrar sección profesional si tiene datos
          if (hasProfessionalInfo) {
            document
              .getElementById("professional-info")
              .classList.remove("d-none");
          }
        } catch (error) {
          console.error("Error:", error);
          document.getElementById("loading").classList.add("d-none");
          document.getElementById("error-message").textContent = error.message;
          document.getElementById("error-alert").classList.remove("d-none");

          // Redirigir al login después de 2 segundos
          setTimeout(() => {
            window.location.href = "/";
          }, 2000);
        }
      }

      // Cargar perfil al cargar la página
      loadProfile();
    </script>
  </body>
</html>
